<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp">

        <ImageView
            android:id="@+id/detail_dialog_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/ic_remind"
            android:padding="2dp"/>


        <TextView
            android:id="@+id/detail_dialog_startTs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_dialog_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Time"
            android:textStyle="italic"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detail_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="40dp"
            android:layout_toEndOf="@+id/detail_dialog_icon"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/detail_dialog_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@+id/detail_dialog_title"
            android:layout_toEndOf="@+id/detail_dialog_icon"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="35dp"
            android:text="Address"
            android:textStyle="bold"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/detail_dialog_edit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@id/detail_dialog_startTs"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_edit"
            android:padding="2dp" />


        <TextView
            android:id="@+id/detail_dialog_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_below="@+id/detail_dialog_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="13dp"
            android:text="Description"
            android:textSize="15sp" />

    </RelativeLayout>
</ScrollView>