<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/send_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="17dp"
            android:padding="2dp"/>


        <TextView
            android:id="@+id/send_startTs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Time"
            android:textStyle="italic"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/send_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="40dp"
            android:layout_toEndOf="@+id/send_icon"
            android:ellipsize="end"
            android:maxLines="1"
            tools:ignore="InvalidId" />

        <TextView
            android:id="@+id/send_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@+id/send_title"
            android:layout_toEndOf="@+id/send_icon"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="40dp"
            android:text="Address"
            android:textStyle="italic"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/send_none"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/send_startTs"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_delete"
            android:padding="2dp" />


        <TextView
            android:id="@+id/send_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="8"
            android:ellipsize="end"
            android:layout_below="@+id/send_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="13dp"
            android:text="Description"
            android:textSize="15sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>